{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
